# --- APPLICATION ---
ENVIRONMENT=development      # development | production
DEBUG=true
LOG_LEVEL=INFO               # DEBUG | INFO | WARNING | ERROR

# --- SPARK CONFIGURATION ---
SPARK_APP_NAME="Airbnb RFM Segmentation"
SPARK_MASTER=local[*]        # All CPU cores
SPARK_DRIVER_MEMORY=4g       # Driver memory allocation
SPARK_EXECUTOR_MEMORY=2g     # Executor memory allocation
SPARK_SHUFFLE_PARTITIONS=200 # Number of shuffle partitions
SPARK_LOG_LEVEL=WARN

# --- DATA SOURCES / PROCESSING ---
DATA_REVIEWS_URL="https://data.insideairbnb.com/france/ile-de-france/paris/2025-09-12/data/reviews.csv.gz"
DATA_LISTINGS_URL="https://data.insideairbnb.com/france/ile-de-france/paris/2025-09-12/data/listings.csv.gz"
DATA_DIR=data
DATA_CHUNK_SIZE=8192
DATA_TIMEOUT=30
DATA_MAX_RETRIES=3

# --- RFM CONFIGURATION ---
RFM_REFERENCE_DATE=2025-09-12 # Snapshot date used to compute recency
RFM_AVG_NIGHTS_PER_BOOKING=3  # Business assumption: average stay duration
RFM_MIN_PRICE_FILTER=10.0
RFM_MAX_PRICE_FILTER=10000.0